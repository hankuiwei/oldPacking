<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/guide_5" />

    <Button
        android:id="@+id/btnStartApp"
        android:layout_width="@dimen/layout_250dp"
        android:layout_height="@dimen/layout_65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/layout_113dp"
        android:background="@drawable/selector_bg_redbtn"
        android:gravity="center"
        android:text="@string/text_start_app"
        android:textColor="@color/white"
        style="?android:borderlessButtonStyle"
        android:textSize="@dimen/text_30sp" />
</RelativeLayout>
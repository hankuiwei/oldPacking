<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item
            android:state_enabled="true"
            android:state_checked="true" >
            <layer-list>
                <item android:gravity="center">
                    <shape android:shape="oval">
                        <solid android:color="@color/white"/>
                        <stroke android:width="1dp"
                            android:color="@color/color_E27C77"/>
                        <size android:width="@dimen/layout_20dp" android:height="@dimen/layout_20dp"/>
                    </shape>
                </item>
                <item android:gravity="center" android:left="@dimen/layout_5dp" android:top="@dimen/layout_5dp" android:right="@dimen/layout_5dp" android:bottom="@dimen/layout_5dp">
                    <shape android:shape="oval">
                        <solid android:color="@color/color_E27C77"/>
                        <size android:width="5.0dp" android:height="5.0dp"/>
                    </shape>
                </item>
            </layer-list>

        </item>
    <item
        android:state_enabled="true"
        android:state_checked="false">
        <shape android:shape="oval">
        <solid android:color="@color/white"/>

        <stroke android:width="1dp"
            android:color="@color/color_E27C77"/>

        <size android:width="@dimen/layout_20dp" android:height="@dimen/layout_20dp"/>
        </shape>
    </item>
</selector>
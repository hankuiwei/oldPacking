<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_373b3e"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.lenovo.csd.eservice.activity.MoreAboutCustomActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_70dp"
        android:background="@color/black_373b3e">

        <RelativeLayout
            android:id="@+id/relative_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bg_draweritem"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/layout_25dp"
            android:paddingRight="@dimen/layout_25dp">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/img_back"
                android:layout_width="@dimen/layout_15dp"
                android:layout_height="@dimen/layout_25dp"
                android:background="@drawable/icon_back" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_13dp"
                android:layout_toRightOf="@id/img_back"
                android:text="@string/text_customer_moreinfo"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/text_24sp" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_contactRecords"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingTop="@dimen/layout_25dp"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>

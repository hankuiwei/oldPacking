<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_70dp"
        android:background="@color/black_373b3e"
        android:text="@string/orders_title"
        android:textSize="@dimen/text_30sp"
        android:gravity="center"
        android:textColor="@color/white"/>
    <!--<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_10dp"
        android:background="@color/color_F4F4F4"
        android:orientation="horizontal"/>-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_70dp"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/orders_unfinished_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/orders_unfinished_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_2dp"
                android:background="@color/red_E47B78"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/Txt_orders_unfinished"
                    android:drawablePadding="@dimen/layout_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_waiting_selected"
                    android:drawableStart="@drawable/icon_waiting_selected"
                    android:layout_centerInParent="true"
                    android:text="@string/orders_unfinished"
                    android:textColor="@color/red_E47B78"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/orders_finished_bg"
            android:background="@drawable/shape_0dpcorner_white_bg">
            <TextView
                android:id="@+id/orders_finished_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_2dp"
                android:background="@color/gray_cccccc"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/Txt_orders_finished"
                android:drawablePadding="@dimen/layout_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_success_unselected"
                android:layout_centerInParent="true"
                android:text="@string/orders_finished"
                android:textColor="@color/gray_cccccc"/>
        </RelativeLayout>
            </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/Order_Pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black_373b3e"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/mine_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/layout_25dp"
        android:paddingTop="@dimen/layout_15dp"
        android:background="#373B3E">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_setting"
            android:textColor="@color/white"
            android:textSize="@dimen/text_30sp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/mine_title_Lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/layout_25dp"
            android:paddingLeft="@dimen/layout_25dp"
            android:background="@drawable/selector_bg_draweritem"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/layout_15dp"
                android:layout_height="@dimen/layout_25dp"
                android:src="@drawable/icon_back"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:paddingEnd="0dp"
                android:paddingLeft="@dimen/layout_10dp"
                android:paddingRight="0dp"
                android:paddingStart="@dimen/layout_10dp"
                android:text="@string/mine_title"
                android:textColor="@color/white"
                android:textSize="@dimen/text_23sp" />
        </LinearLayout>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <TextView
            android:id="@+id/mine_lebel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_hint_title"
            android:textColor="#666666"
            android:textSize="@dimen/text_23sp"
            android:layout_marginTop="@dimen/layout_47dp"
            android:layout_marginLeft="@dimen/layout_20dp"
            android:layout_marginRight="@dimen/layout_20dp"
            />
    <TextView
        android:id="@+id/mine_line_tv1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/mine_lebel"
        android:background="#cccccc"
        android:layout_marginTop="@dimen/layout_25dp"
        />
    <LinearLayout
        android:id="@+id/Mine_middle_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_line_tv1"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/layout_15dp"
        android:layout_marginBottom="@dimen/layout_15dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:layout_marginLeft="@dimen/layout_20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_select"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:textSize="@dimen/text_23sp"/>
        <RelativeLayout
            android:id="@+id/mine_remind"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/layout_25dp"
            android:paddingStart="@dimen/layout_25dp"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/mine_remind_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_not_hint"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_18sp"
                android:textColor="#666666"/>
            <ImageView
                android:layout_width="@dimen/layout_10dp"
                android:layout_height="@dimen/layout_15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_foreward"
                android:contentDescription="@string/app_name"/>

            </RelativeLayout>
        </LinearLayout>
    <TextView
        android:id="@+id/mine_line_tv2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/Mine_middle_linear"
        android:background="#cccccc"
        />
    <Button
        android:id="@+id/mine_save_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:layout_marginBottom="@dimen/layout_25dp"
        android:background="@drawable/selector_bg_redbtn"
        android:text="@string/mine_save"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20sp"/>
</RelativeLayout>
    </LinearLayout>
        </LinearLayout>
</LinearLayout>

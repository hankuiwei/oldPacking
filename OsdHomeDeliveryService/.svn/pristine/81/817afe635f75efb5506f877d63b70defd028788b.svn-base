<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/simple_fragment"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/layout_25dp"
        android:paddingBottom="@dimen/layout_25dp"
        android:paddingLeft="@dimen/layout_25dp"
        android:paddingStart="@dimen/layout_25dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp">
        <LinearLayout
            android:layout_width="@dimen/layout_75dp"
            android:layout_height="@dimen/layout_75dp"
            android:orientation="vertical">
            <com.lenovo.csd.eservice.widget.CircleImageView
                android:id="@+id/comment_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:border_width="2dp"
                app:border_color="@color/gray_cccccc"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/layout_25dp"
        android:layout_marginStart="@dimen/layout_25dp"
        android:layout_gravity="center_vertical">
        <RatingBar
            android:id="@+id/comment_stars"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_15dp"
            android:numStars="5"
            android:rating="3"
            android:isIndicator="true"
            style="@style/MyRatingBar"/>
        <LinearLayout
            android:id="@+id/comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_5dp"
            android:orientation="horizontal"/>
        <TextView
            android:layout_marginTop="@dimen/layout_13dp"
            android:id="@+id/Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_Comment_text"
            android:textSize="@dimen/text_15sp"
            android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/comment_line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_20dp"
            android:background="#F4F4F4"
            android:orientation="horizontal" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/black_373b3e"
    android:orientation="vertical"
    tools:context="com.lenovo.csd.eservice.activity.BaseActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_70dp"
        android:background="#373B3E"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/orders_task"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_bg_draweritem"
            android:paddingLeft="@dimen/layout_25dp"
            android:paddingRight="@dimen/layout_25dp">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/layout_15dp"
                android:layout_height="@dimen/layout_25dp"
                android:src="@drawable/icon_back"
                android:layout_centerVertical="true"
               />
            <TextView
                android:layout_toRightOf="@id/imgBack"
                android:layout_marginLeft="@dimen/line_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:layout_centerVertical="true"
                android:text="@string/order_task"
                android:textColor="@color/white"
                android:textSize="@dimen/text_23sp" />
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/orders_task_Rec"
        android:paddingTop="@dimen/layout_47dp"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:paddingBottom="@dimen/layout_30dp"
        android:layout_height="match_parent"/>
    <!--<ListView
        android:id="@+id/orders_task_Rec"
        android:layout_marginTop="@dimen/layout_47dp"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="match_parent"/>
        -->
</LinearLayout>

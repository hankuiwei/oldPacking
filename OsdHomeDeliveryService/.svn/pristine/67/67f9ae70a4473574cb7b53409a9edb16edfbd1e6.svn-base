<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#373B3E"
        android:paddingTop="@dimen/layout_15dp"
        android:paddingBottom="@dimen/layout_25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_title"
            android:textSize="@dimen/text_30sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginStart="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_25dp"
        android:layout_marginEnd="@dimen/layout_25dp"
        android:layout_marginTop="@dimen/layout_15dp"
        android:layout_marginBottom="@dimen/layout_20dp"
        >
        <LinearLayout
            android:layout_width="@dimen/layout_101dp"
            android:layout_height="@dimen/layout_101dp"
            android:id="@+id/mineHeadLin"
            android:orientation="vertical">
            <com.lenovo.csd.eservice.widget.CircleImageView
                android:id="@+id/mineHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/default_load_img"
                app:border_width="2dp"
                app:border_color="#dddddd"
                />
        </LinearLayout>

        <!--android:border_width="2dp"
            android:border_color="@color/gray_cccccc" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mineHeadLin"
            android:layout_toEndOf="@id/mineHeadLin"
            android:layout_marginLeft="@dimen/layout_20dp"
            android:layout_marginStart="@dimen/layout_20dp"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/mineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/text_23sp"
                android:text="@string/mine_name"/>
            <TextView
                android:id="@+id/minePositionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/text_18sp"
                android:text="@string/mine_job"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/mineQRCode"
            android:layout_width="@dimen/layout_60dp"
            android:layout_height="@dimen/layout_60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_qr"
            android:contentDescription="@string/app_name"/>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <RelativeLayout
        android:id="@+id/mineCommentRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layout_25dp"
        android:paddingBottom="@dimen/layout_25dp"
        android:paddingLeft="@dimen/layout_49dp"
        android:paddingStart="@dimen/layout_49dp"
        android:paddingRight="@dimen/layout_25dp"
        android:paddingEnd="@dimen/layout_25dp"
        android:background="@drawable/selector_bg_change_me">
        <ImageView
            android:id="@+id/mineCommentImg"
            android:layout_width="@dimen/layout_18dp"
            android:layout_height="@dimen/layout_18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_at_me_comment_notes"
            android:layout_marginRight="@dimen/layout_10dp"
            android:layout_marginEnd="@dimen/layout_10dp"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_Comment_notes"
            android:textSize="@dimen/text_18sp"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mineCommentImg"
            />
        <ImageView
            android:layout_width="@dimen/layout_10dp"
            android:layout_height="@dimen/layout_15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_foreward"
            android:contentDescription="@string/app_name"/>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <RelativeLayout
        android:id="@+id/mineAppendixRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layout_25dp"
        android:paddingBottom="@dimen/layout_25dp"
        android:paddingLeft="@dimen/layout_49dp"
        android:paddingStart="@dimen/layout_49dp"
        android:paddingRight="@dimen/layout_25dp"
        android:paddingEnd="@dimen/layout_25dp"
        android:background="@drawable/selector_bg_change_me">
        <ImageView
            android:id="@+id/mineAppendixImg"
            android:layout_width="@dimen/layout_18dp"
            android:layout_height="@dimen/layout_18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_at_me_appendix"
            android:layout_marginRight="@dimen/layout_10dp"
            android:layout_marginEnd="@dimen/layout_10dp"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_appendix"
            android:textSize="@dimen/text_18sp"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mineAppendixImg"
            android:layout_toEndOf="@id/mineAppendixImg"
            />
        <ImageView
            android:layout_width="@dimen/layout_10dp"
            android:layout_height="@dimen/layout_15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_foreward"
            android:contentDescription="@string/app_name"/>
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <RelativeLayout
        android:id="@+id/mineSettingRel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layout_25dp"
        android:paddingBottom="@dimen/layout_25dp"
        android:paddingLeft="@dimen/layout_49dp"
        android:paddingStart="@dimen/layout_49dp"
        android:paddingRight="@dimen/layout_25dp"
        android:paddingEnd="@dimen/layout_25dp"
        android:background="@drawable/selector_bg_change_me">
        <ImageView
            android:id="@+id/mineSettingImg"
            android:layout_width="@dimen/layout_18dp"
            android:layout_height="@dimen/layout_18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_at_me_setting"
            android:layout_marginRight="@dimen/layout_10dp"
            android:layout_marginEnd="@dimen/layout_10dp"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_setting"
            android:textSize="@dimen/text_18sp"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mineSettingImg"
            android:layout_toEndOf="@id/mineSettingImg"
            />
        <ImageView
            android:layout_width="@dimen/layout_10dp"
            android:layout_height="@dimen/layout_15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_foreward"
            android:contentDescription="@string/app_name"/>
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <RelativeLayout
        android:id="@+id/mineFeedbackRel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layout_25dp"
        android:paddingBottom="@dimen/layout_25dp"
        android:paddingLeft="@dimen/layout_49dp"
        android:paddingStart="@dimen/layout_49dp"
        android:paddingRight="@dimen/layout_25dp"
        android:paddingEnd="@dimen/layout_25dp"
        android:background="@drawable/selector_bg_change_me">
        <ImageView
            android:id="@+id/mineFeedbackImg"
            android:layout_width="@dimen/layout_18dp"
            android:layout_height="@dimen/layout_18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_opinion"
            android:layout_marginRight="@dimen/layout_10dp"
            android:layout_marginEnd="@dimen/layout_10dp"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_Feedback"
            android:textSize="@dimen/text_18sp"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mineFeedbackImg"
            android:layout_toEndOf="@id/mineFeedbackImg"
            />
        <ImageView
            android:layout_width="@dimen/layout_10dp"
            android:layout_height="@dimen/layout_15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_foreward"
            android:contentDescription="@string/app_name"/>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
            <RelativeLayout
                android:id="@+id/mineAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/layout_25dp"
                android:paddingBottom="@dimen/layout_25dp"
                android:paddingLeft="@dimen/layout_49dp"
                android:paddingStart="@dimen/layout_49dp"
                android:paddingRight="@dimen/layout_25dp"
                android:paddingEnd="@dimen/layout_25dp"
                android:background="@drawable/selector_bg_change_me">
                <ImageView
                    android:id="@+id/imageAbout"
                    android:layout_width="@dimen/layout_18dp"
                    android:layout_height="@dimen/layout_18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_success_unselected"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:layout_marginEnd="@dimen/layout_10dp"
                    android:contentDescription="@string/app_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_about"
                    android:textSize="@dimen/text_18sp"
                    android:textColor="#666666"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imageAbout"
                    android:layout_toEndOf="@id/imageAbout"
                    />
                <ImageView
                    android:layout_width="@dimen/layout_10dp"
                    android:layout_height="@dimen/layout_15dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_foreward"
                    android:contentDescription="@string/app_name"/>
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>

    <Button
        android:id="@+id/mineExitBtn"
        android:layout_marginTop="@dimen/layout_49dp"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_70dp"
        android:background="@drawable/selector_bg_redbtn"
        android:text="@string/mine_exit"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_20sp"
        android:layout_marginLeft="@dimen/layout_25dp"
        android:layout_marginRight="@dimen/layout_25dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

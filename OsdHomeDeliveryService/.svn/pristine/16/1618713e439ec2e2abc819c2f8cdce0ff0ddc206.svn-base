<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_pieceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【换件.一换一】"
                android:textColor="@color/gray_666666"
                android:textSize="@dimen/text_15sp" />

            <LinearLayout
                android:id="@+id/linear_upPiece"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_upPieceLineCodeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="换上件条码："
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />

                    <TextView
                        android:id="@+id/text_upPieceLineCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12121212"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textUpPieceCodeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="换上件编码："
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />

                    <TextView
                        android:id="@+id/text_upPieceCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12121212"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_upPieceDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="换上件描述："
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />

                    <TextView
                        android:id="@+id/text_upPieceDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12121212"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_downPiece"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="换下件条码："
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />

                    <TextView
                        android:id="@+id/text_downPieceLineCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12121212"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="换下件编码："
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />

                    <TextView
                        android:id="@+id/text_downPieceCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12121212"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="换下件描述："
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />

                    <TextView
                        android:id="@+id/text_downPieceDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12121212"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textDeleteItemPice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/layout_25dp"
            android:background="@drawable/selector_bg_redbtn"
            android:paddingBottom="@dimen/layout_13dp"
            android:paddingLeft="@dimen/layout_36dp"
            android:paddingRight="@dimen/layout_36dp"
            android:paddingTop="@dimen/layout_13dp"
            android:text="@string/text_delete"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_5dp"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layerType="software"
        android:background="@drawable/shape_graydash_line"
        android:layout_marginBottom="@dimen/layout_10dp"
        />
</LinearLayout>
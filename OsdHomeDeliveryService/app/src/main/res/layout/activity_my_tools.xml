<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_373b3e"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    tools:context="com.lenovo.csd.eservice.activity.MyToolsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_70dp"
        android:background="@color/black_373b3e">

        <RelativeLayout
            android:id="@+id/relative_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bg_draweritem"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/layout_25dp"
            android:paddingRight="@dimen/layout_25dp">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/img_back"
                android:layout_width="@dimen/layout_15dp"
                android:layout_height="@dimen/layout_25dp"
                android:background="@drawable/icon_back" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_toRightOf="@id/img_back"
                android:text="@string/text_tools"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/text_24sp" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/linearMachine"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgMachineInfo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/selector_machine_mytool"/>
            <TextView
                android:textColor="@color/gray_666666"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/text_18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_hostmachine_info"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearFillbox"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgFillBoxInfo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/selector_fillbox_mytool"/>
            <TextView
                android:textColor="@color/gray_666666"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/text_18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_fillbox_order"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
